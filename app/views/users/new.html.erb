<h1>Sign Up for conference booking</h1>

<%= form_for(@user) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation, "Confirm Password" %><br>
    <%= f.password_field :password_confirmation %>
  </p>
  
  <p>
    <%= f.submit "Create Account"%>
  </p>
<% end %>
<p><%= link_to "Go to login",  controller: "sessions", action: "new"  %></p>
